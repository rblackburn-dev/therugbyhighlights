<body>
<header>
    <a href="{{ path('rugby') }}" class="title">
        The Rugby Highlights
    </a>

    <div class="bx bx-menu" id="menu-icon"></div>

    <ul class="navbar">
        <li><a href="{{ path('rugby') }}">Home</a></li>
        <li><a href="{{ path('fixtures') }}">Fixtures</a></li>
        <li><a href="{{ path('archive') }}">Archive</a></li>
    </ul>
</header>
    {% block body %}
    {% endblock %}

    {% block footer %}
    <footer>
        <div class="footer-content">
            <h2>About</h2>
            <br>
            <p style="font-weight: 100; text-align: center">The Rugby Highlights brings you all the action without the spoilers!<br> Catch up on the latest matches
                across the top rugby leagues and competitions, including the Six Nations, Super Rugby, United Rugby
                Championship & more.</p>
            <br>
            <a href="https://www.dtmts.com" title="Concept Inspiration" target="_blank">Concept Inspired by Don't Tell Me The Score</a>
            <br>
            <br>
            <p>&copy; <span id="year"></span> The Rugby Highlights.</p>
        </div>
    </footer>
    {% endblock %}
<script type="text/javascript" src="{{ asset('/assets/js/script.js') }}"></script>
<script src="{{ asset('/assets/js/jquery-3.7.1.min.js') }}"></script>
<script src="{{ asset('/assets/lib/sweet-modal/jquery.sweet-modal.min.js') }}"></script>
<script>
    document.getElementById("year").innerHTML = new Date().getFullYear();
</script>
